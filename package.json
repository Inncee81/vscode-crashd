{
	"name": "zcov-viewer",
	"displayName": "Zcov Viewer",
	"description": "Highlight source files with crash information generated by Zelos.",
	"version": "0.1.0",
	"license": "MIT",
	"publisher": "ZeropointDynamics",
	"author": {
		"name": "Ryan Court",
		"email": "rccourt@zeropointdynamics.com"
	},
	"activationEvents": [
		"onCommand:zcov-viewer.show",
		"onCommand:zcov-viewer.hide",
		"onCommand:zcov-viewer.toggle",
		"onCommand:zcov-viewer.reloadZcovFiles",
		"onCommand:zcov-viewer.selectBuildDirectory",
		"onCommand:zcov-viewer.dumpPathsWithCoverageData"
	],
	"engines": {
		"vscode": "^1.46.0"
	},
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "zcov-viewer.show",
				"title": "Show",
				"category": "Zcov Viewer"
			},
			{
				"command": "zcov-viewer.hide",
				"title": "Hide",
				"category": "Zcov Viewer"
			},
			{
				"command": "zcov-viewer.toggle",
				"title": "Toggle",
				"category": "Zcov Viewer"
			},
			{
				"command": "zcov-viewer.reloadZcovFiles",
				"title": "Reload (Import .zcov Files)",
				"category": "Zcov Viewer"
			},
			{
				"command": "zcov-viewer.dumpPathsWithCoverageData",
				"title": "Dump Paths with Coverage Data",
				"category": "Zcov Viewer"
			}
		],
		"configuration": [
			{
				"title": "Zcov Viewer",
				"properties": {
					"zcovViewer.buildDirectories": {
						"type": "array",
						"title": "Build Directories",
						"scope": "window",
						"description": "Directories that will be included in the search for .zcov files."
					},
					"zcovViewer.highlightExecutedLines": {
						"type": "boolean",
						"title": "Highlight Executed Lines",
						"scope": "resource",
						"description": "Not only mark the called lines but also the lines that have not been executed.",
						"default": true
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {}
}
